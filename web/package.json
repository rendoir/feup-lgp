{
  "name": "gnet",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bootstrap": "^3.4.1",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.5",
    "react": "^16.8.5",
    "react-bootstrap": "^1.0.0-beta.6",
    "react-dom": "^16.8.5",
    "react-redux": "^6.0.1",
    "react-router-dom": "^5.0.0",
    "react-scripts-ts": "3.1.0",
    "redux": "^4.0.1",
    "redux-starter-kit": "^0.4.3",
    "stylelint": "^9.10.1"
  },
  "lint-staged": {
    "src/*.{js,jsx,ts,tsx}": [
      "./node_modules/.bin/prettier --single-qute --write --parser \"typescript\",",
      "git add"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "./node_modules/.bin/prettier --single-qute --write --parser \"typescript\",",
      "git add"
    ],
    "src/stylesheets/*.scss": [
      "./node_modules/.bin/stylelint --syntax=scss",
      "git add"
    ]
  },
  "scripts": {
    "build-css": "node-sass-chokidar web/src/ -o web/src/",
    "watch-css": "npm run build-css && node-sass-chokidar web/src/ -o web/src/ --watch --recursive",
    "start-js": "./node_modules/.bin/react-scripts-ts start",
    "start": "./node_modules/.bin/npm-run-all -p watch-css start-js",
    "build": "npm run build-css && react-scripts-ts build",
    "test": "./node_modules/.bin/react-scripts-ts test --env=jsdom",
    "eject": "./node_modules/.bin/react-scripts-ts eject"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.12.0",
    "@types/react": "^16.8.8",
    "@types/react-dom": "^16.8.3",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "react-docgen-typescript": "^1.12.3",
    "react-styleguidist": "^9.0.5",
    "redux-devtools": "^3.5.0",
    "ts-loader": "^5.3.3",
    "typescript": "^3.3.4000",
    "webpack": "^4.29.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
