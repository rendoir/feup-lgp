# Stage 1 - Build
FROM node:lts as react-build
WORKDIR /web
COPY . ./
RUN npm install
RUN npm run build

# Stage 2 - Serve
FROM node:lts

# set working directory
RUN mkdir /usr/gnet
WORKDIR /usr/gnet
COPY --from=react-build /web/build /usr/gnet

# COPY docker/site.key /run/secrets/site.key
# COPY docker/site.crt /run/secrets/site.crt

RUN npm install -g serve
CMD serve -s .
EXPOSE 5001

