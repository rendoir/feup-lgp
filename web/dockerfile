# base image
FROM node:9.6.1

# set working directory
RUN mkdir /usr/gnet
WORKDIR /usr/gnet
COPY build /usr/gnet

# COPY docker/site.key /run/secrets/site.key
# COPY docker/site.crt /run/secrets/site.crt

RUN npm install -g serve
CMD serve -s build


