{
  "name": "gnet",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bootstrap": "^3.4.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "react": "^16.8.5",
    "react-bootstrap": "^1.0.0-beta.6",
    "react-dom": "^16.8.5",
    "react-router-dom": "^5.0.0",
    "react-scripts-ts": "3.1.0"
  },
  "lint-staged": {
    "app/src/**/*.{js,jsk,json,css}": [
      "prettier --single-qute --write",
      "git add"
    ]
  },
  "scripts": {
    "precommit": "lint-staged",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "./node_modules/.bin/react-scripts-ts start",
    "start": "./node_modules/.bin/npm-run-all -p watch-css start-js",
    "build": "npm run build-css && react-scripts-ts build",
    "test": "./node_modules/.bin/react-scripts-ts test --env=jsdom",
    "eject": "./node_modules/.bin/react-scripts-ts eject"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.12.0",
    "@types/react": "^16.8.8",
    "@types/react-dom": "^16.8.3",
    "typescript": "^3.3.4000"
  }
}
